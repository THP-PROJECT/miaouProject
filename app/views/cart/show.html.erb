<%= render partial: "cart/cart" if current_user %>
 <%= render partial: "cart/cart" if current_user && @cart.orderables.present? %>

<h1 class="mb-4">Your Cart</h1>

<% @cart.orderables.each do |orderable| %>
  <% product = orderable.product %>
  <div class="mb-3">
    <p><%= product.name %> * <%= orderable.quantity %> = $<%= product.price * orderable.quantity %></p>
  </div>
<% end %>

<div class="mt-4">
  <p class="fw-bold">Your total is $<%= @cart.total %></p>
</div>
