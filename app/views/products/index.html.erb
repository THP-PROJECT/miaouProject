<header class="py-5" style="background-image: url('https://img.freepik.com/free-vector/cat-lover-pattern-background-design_53876-100662.jpg?w=2000'); background-size: cover; height:60vh; background-position: bottom;">
  <div class="container px-4 px-lg-5 my-5">
    <div class="text-center">
      <h1 class="display-4 fw-bolder">Les chats c'est la vie</h1>
      <p class="lead fw-normal mb-0">Ach√®te un max de chats afin de conforter ta triste vie</p>
    </div>
  </div>
</header>
<hr class="m-0"/>

<section class="row py-4 justify-content-between m-4">
  <div class="col-3">
    <%= render partial: 'filters' %>
  </div>
  <div class="container col-9">
      <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
        <% @products.each do |product| %>
          <%= render partial: 'product', locals: { product: product } %>
        <% end %>
      </div>
  </div>
</section>


<div class="mt-3">
  <% if current_user&.admin? %>
    <%= link_to "New product", new_product_path, class: "btn btn-success" %>
  <% end %>
</div>

