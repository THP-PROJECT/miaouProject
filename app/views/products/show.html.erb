<p style="color: green"><%= notice %></p>

<%= render @product %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <%= link_to "Edit this product", edit_product_path(@product), class: "btn btn-primary" %>
  <%= link_to "Back to products", products_path, class: "btn btn-secondary" %>
  <%= button_to "Destroy this product", @product, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
</div>

